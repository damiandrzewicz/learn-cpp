# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{cpp,cxx,cc,c,h,hpp,hxx,hh}]
indent_size = 2

[*.cmake]
indent_size = 2

[CMakeLists.txt]
indent_size = 2
