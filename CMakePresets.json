{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Configure with Conan toolchain (Debug)",
            "generator": "Ninja",
            "binaryDir": "build/Debug",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/Debug/generators/conan_toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Configure with Conan toolchain (Release)",
            "generator": "Ninja",
            "binaryDir": "build/Release",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/Release/generators/conan_toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage (Debug)",
            "description": "Configure Debug with coverage flags enabled; uses Debug Conan toolchain",
            "generator": "Ninja",
            "binaryDir": "build/Coverage",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/Debug/generators/conan_toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_COVERAGE": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Build Debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Build Release",
            "configurePreset": "release"
        },
        {
            "name": "coverage",
            "displayName": "Build Coverage",
            "configurePreset": "coverage"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "displayName": "Test Debug",
            "configurePreset": "debug",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "release",
            "displayName": "Test Release",
            "configurePreset": "release",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "coverage",
            "displayName": "Test Coverage",
            "configurePreset": "coverage",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}